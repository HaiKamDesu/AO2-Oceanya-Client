<UserControl x:Class="OceanyaClient.AO2ChatPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="210"
             MinWidth="460">
    <Border Background="#22000000" BorderBrush="#3A4A5E" BorderThickness="1" CornerRadius="4" Padding="10">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock Text="Chat Preview (AO2-style)"
                       Foreground="#FFD8D8D8"
                       FontSize="11"
                       Margin="0,0,0,6"
                       HorizontalAlignment="Center"/>
            <Border Width="560"
                    Height="150"
                    Background="#1B000000"
                    BorderBrush="#3E4E62"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Image x:Name="ChatboxImage"
                           Stretch="Fill"/>
                    <Border x:Name="FallbackBackground"
                            Background="#CC101010"/>

                    <Grid Margin="18,12,18,14">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ShownameTextBlock"
                                   Grid.Row="0"
                                   Text="Preview Name"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   TextTrimming="CharacterEllipsis"/>

                        <Border x:Name="MessageContainer" Grid.Row="1" Margin="0,8,0,0" Background="#00000000">
                            <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Disabled">
                                <TextBlock x:Name="MessageTextBlock"
                                           Text="Preview message."
                                           Foreground="White"
                                           FontSize="16"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
