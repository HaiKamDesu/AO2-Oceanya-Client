                                                    BorderBrush="#556F899F"
                                                    BorderThickness="1"/>
                                            <TextBlock x:Name="ButtonIconsSolidColorHexTextBlock"
                                                       Grid.Column="2"
                                                       VerticalAlignment="Center"
                                                       Foreground="#FFD3E5F7"/>
                                        </Grid>
                                    </StackPanel>

                                    <StackPanel x:Name="ButtonIconsUploadPanel" Visibility="Collapsed" Margin="0,0,0,8">
                                        <DockPanel Margin="0,0,0,4" LastChildFill="False">
                                            <Button Content="(?)" Style="{StaticResource HelpBadgeStyle}"
                                                    ToolTip="Upload a shared background image for automatic button generation."/>
                                            <TextBlock Text="Background Upload" Style="{StaticResource FieldTitleStyle}"/>
                                        </DockPanel>
                                        <Button x:Name="ButtonIconsBackgroundUploadButton"
                                                Width="150"
                                                Content="Select image..."
                                                Style="{StaticResource ModernButton}"
                                                Click="ButtonIconsBackgroundUploadButton_Click"/>
                                        <TextBlock x:Name="ButtonIconsBackgroundUploadTextBlock"
                                                   Foreground="#FFC5D6E8"
                                                   Margin="0,6,0,0"
                                                   Text="No file selected"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,8">
                                        <DockPanel Margin="0,0,0,4" LastChildFill="False">
                                            <Button Content="(?)" Style="{StaticResource HelpBadgeStyle}"
                                                    ToolTip="Open multi-emote cutting and configure each cutout in sequence."/>
                                            <TextBlock Text="Emote Cutting" Style="{StaticResource FieldTitleStyle}"/>
                                        </DockPanel>
                                        <Button x:Name="ButtonIconsBulkCuttingButton"
                                                Width="200"
                                                Content="Configure cutouts..."
                                                Style="{StaticResource ModernButton}"
                                                Click="ButtonIconsBulkCuttingButton_Click"/>
                                        <WrapPanel x:Name="ButtonIconsCutoutPreviewWrapPanel" Margin="0,8,0,0"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,10">
                                        <DockPanel Margin="0,0,0,4" LastChildFill="False">
                                            <Button Content="(?)" Style="{StaticResource HelpBadgeStyle}"
                                                    ToolTip="How button_off is generated from button_on."/>
                                            <TextBlock Text="Effects Generation" Style="{StaticResource FieldTitleStyle}"/>
                                        </DockPanel>
                                        <local:AutoCompleteDropdownField x:Name="ButtonIconsEffectsDropdown"/>
                                        <StackPanel x:Name="ButtonIconsDarkenPanel" Visibility="Collapsed" Margin="0,6,0,0">
                                            <TextBlock x:Name="ButtonIconsDarkenValueText" Foreground="#FFD3E5F7" Margin="0,0,0,4" Text="Darkness: 50%"/>
                                            <Slider x:Name="ButtonIconsDarkenSlider"
                                                    Minimum="0"
                                                    Maximum="100"
                                                    Value="50"
                                                    TickFrequency="5"
                                                    IsSnapToTickEnabled="True"
                                                    ValueChanged="ButtonIconsDarkenSlider_ValueChanged"/>
                                        </StackPanel>
                                        <StackPanel x:Name="ButtonIconsOpacityPanel" Visibility="Collapsed" Margin="0,6,0,0">
                                            <TextBlock x:Name="ButtonIconsOpacityValueText" Foreground="#FFD3E5F7" Margin="0,0,0,4" Text="Opacity: 75%"/>
                                            <Slider x:Name="ButtonIconsOpacitySlider"
                                                    Minimum="0"
                                                    Maximum="100"
                                                    Value="75"
                                                    TickFrequency="5"
                                                    IsSnapToTickEnabled="True"
                                                    ValueChanged="ButtonIconsOpacitySlider_ValueChanged"/>
                                        </StackPanel>
                                        <StackPanel x:Name="ButtonIconsOverlayPanel" Visibility="Collapsed" Margin="0,6,0,0">
                                            <Button x:Name="ButtonIconsOverlayUploadButton"
                                                    Width="170"
                                                    Content="Select overlay..."
                                                    Style="{StaticResource ModernButton}"
                                                    Click="ButtonIconsOverlayUploadButton_Click"/>
                                            <TextBlock x:Name="ButtonIconsOverlayPathTextBlock" Foreground="#FFC5D6E8" Margin="0,6,0,0" Text="No overlay selected"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Button x:Name="ButtonIconsApplyButton"
                                            Width="260"
                                            Content="Apply Automatic Config To List"
                                            Style="{StaticResource ModernButton}"
                                            Click="ButtonIconsApplyButton_Click"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>

                <Border Grid.Row="2" Background="#CC111111" Padding="10,6">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <DockPanel Grid.Column="0" LastChildFill="True">
                            <StackPanel Orientation="Horizontal" Margin="0,0,18,0" VerticalAlignment="Center">
                                <TextBlock Text="Preview Volume" Foreground="#FFD0D0D0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <Slider x:Name="PreviewVolumeSlider"
                                        Width="150"
                                        Minimum="0"
                                        Maximum="100"
                                        ValueChanged="PreviewVolumeSlider_ValueChanged"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="False"
                                        VerticalAlignment="Center"/>
                                <TextBlock x:Name="PreviewVolumePercentTextBlock"
                                           Foreground="#FFD0D0D0"
                                           VerticalAlignment="Center"
                                           Margin="8,0,0,0"
                                           Text="100%"/>
                            </StackPanel>
                            <TextBlock x:Name="StatusTextBlock" Foreground="#FFB8B8B8" VerticalAlignment="Center" Text="Configure the character and generate a new AO folder."/>
                        </DockPanel>
                        <Button Grid.Column="1" Width="280" Content="Generate Character Folder" Style="{StaticResource ModernButton}" Click="GenerateButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
