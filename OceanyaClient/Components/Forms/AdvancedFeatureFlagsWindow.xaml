<Window x:Class="OceanyaClient.AdvancedFeatureFlagsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Feature Flagging"
        Height="330"
        Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Resources/OceanyaO.ico"
        Background="#FF202020">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Advanced feature flagging"
                   FontSize="16"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <Border Grid.Row="1" BorderBrush="#FF4A4A4A" BorderThickness="1" Padding="10" Background="#FF2A2A2A">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="FeatureRowsPanel"/>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="100" Height="30" Margin="0,0,8,0" Content="Save" Click="SaveButton_Click"/>
            <Button Width="100" Height="30" Content="Cancel" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
