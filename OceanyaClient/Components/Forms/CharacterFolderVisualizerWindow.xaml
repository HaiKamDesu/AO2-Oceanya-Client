<local:OceanyaWindowContentControl x:Class="OceanyaClient.CharacterFolderVisualizerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OceanyaClient"
        Height="690"
        Width="980"
        MinHeight="520"
        MinWidth="760"
        Background="Transparent"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <local:OceanyaWindowContentControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF171717" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF1A1A1A" TargetName="ButtonBorder"/>
                                <Setter Property="BorderBrush" Value="#FF333333" TargetName="ButtonBorder"/>
                                <Setter Property="Foreground" Value="#FF7A7A7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="TagChipButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E4A5F"/>
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="BorderBrush" Value="#4C86AE"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A6281" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#23445D" TargetName="ButtonBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#FFECECEC"/>
            <Setter Property="Background" Value="#FF1F1F1F"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemBorder" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF36506A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FF3D5E7F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#FFF0F0F0"/>
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="BorderBrush" Value="#FF444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,0,28,0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboBoxItemStyle}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid SnapsToDevicePixels="True">
                            <Border x:Name="MainBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3"/>

                            <ToggleButton x:Name="DropdownToggle"
                                          Focusable="False"
                                          ClickMode="Press"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent"
                                          BorderThickness="0">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <ContentPresenter x:Name="SelectionBoxPresenter"
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Stretch"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              TextElement.Foreground="{TemplateBinding Foreground}"/>

                            <TextBox x:Name="PART_EditableTextBox"
                                     Margin="{TemplateBinding Padding}"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Left"
                                     Foreground="{TemplateBinding Foreground}"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Visibility="Hidden"
                                     Focusable="True"/>

                            <Path HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"
                                  IsHitTestVisible="False"
                                  Fill="#FFDCDCDC"
                                  Data="M 0 0 L 8 0 L 4 5 Z"/>

                            <Popup x:Name="PART_Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Fade">
                                <Border Margin="0,2,0,0"
                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="#FF1F1F1F"
                                        BorderBrush="#FF4A4A4A"
                                        BorderThickness="1"
                                        CornerRadius="3">
                                    <ScrollViewer CanContentScroll="True" MaxHeight="320">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="SelectionBoxPresenter" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="#FF2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#FF6E93BB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="MainBorder" Property="Background" Value="#FF1A1A1A"/>
                                <Setter Property="Foreground" Value="#FF7A7A7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisualizerListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="VisualizerDetailsItemStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <GridViewRowPresenter Margin="0"
                                                      VerticalAlignment="Center"
                                                      Content="{TemplateBinding Content}"/>
                                <Thumb Height="6"
                                       VerticalAlignment="Bottom"
                                       HorizontalAlignment="Stretch"
                                       Cursor="SizeNS"
                                       DragStarted="DetailsRowResizeThumb_DragStarted"
                                       DragDelta="DetailsRowResizeThumb_DragDelta"
                                       DragCompleted="DetailsRowResizeThumb_DragCompleted">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Grid Background="Transparent">
                                                <Border VerticalAlignment="Bottom"
                                                        Height="1"
                                                        Background="#554C86AE"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#355F5F5F"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#4B6D6D6D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IntegrityHasFailures}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=ShowIntegrityVerifierResults}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#26FF5B5B"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisualizerIconItemStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                BorderThickness="1"
                                BorderBrush="#00000000"
                                CornerRadius="4"
                                Margin="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#AA80B5F0"/>
                                <Setter TargetName="ItemBorder" Property="Background" Value="#193B4F66"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#FF97C9FF"/>
                                <Setter TargetName="ItemBorder" Property="Background" Value="#30507699"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IntegrityHasFailures}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=ShowIntegrityVerifierResults}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#26FF5B5B"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="VisualizerGridHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Foreground" Value="#D8D8D8"/>
            <Setter Property="Background" Value="#FF2F2F2F"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <EventSetter Event="Click" Handler="GridHeader_Click"/>
            <EventSetter Event="PreviewMouseRightButtonUp" Handler="GridHeader_PreviewMouseRightButtonUp"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                            </Border>
                            <Thumb x:Name="PART_HeaderGripper"
                                   HorizontalAlignment="Right"
                                   Width="9"
                                   Margin="0"
                                   Panel.ZIndex="3"
                                   Background="Transparent"
                                   Cursor="SizeWE">
                                <Thumb.Template>
                                    <ControlTemplate TargetType="Thumb">
                                        <Grid Background="Transparent">
                                            <Border HorizontalAlignment="Center"
                                                    Width="1"
                                                    Background="#66444444"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                            <Trigger Property="IsDragging" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Thumb.Template>
                            </Thumb>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ItemsPanelTemplate x:Key="IconItemsPanelTemplate">
            <WrapPanel Orientation="Horizontal"/>
        </ItemsPanelTemplate>

        <ItemsPanelTemplate x:Key="DetailsItemsPanelTemplate">
            <VirtualizingStackPanel/>
        </ItemsPanelTemplate>

        <DataTemplate x:Key="DetailsIconTemplate">
            <Border Background="Transparent" Padding="0.7">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="{Binding IconImage}" Stretch="Uniform"/>
                </Viewbox>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="DetailsRowNumberTemplate">
            <TextBlock Text="{Binding IndexText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#FFD8D8D8"/>
        </DataTemplate>
        <DataTemplate x:Key="DetailsRowHeaderTemplate">
            <Border Background="#FF2F2F2F"
                    BorderBrush="#444444"
                    BorderThickness="0,0,1,1"
                    Padding="0"
                    Height="{Binding RelativeSource={RelativeSource AncestorType=ListViewItem}, Path=ActualHeight}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="-6,0,-6,0"
                    SnapsToDevicePixels="True">
                <TextBlock Text="{Binding RowPositionText}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="#FFD8D8D8"
                           FontWeight="SemiBold"/>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="DetailsTagsTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets"
                           Text="&#xE8EC;"
                           Margin="0,0,6,0"
                           Foreground="#FF9FD0F5"
                           VerticalAlignment="Center"/>
                <TextBlock Text="{Binding TagsText}"
                           Foreground="#FFEFEFEF"
                           TextTrimming="CharacterEllipsis"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="DetailsEmoteCountCenteredTemplate">
            <TextBlock Text="{Binding EmoteCountText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Foreground="#FFEFEFEF"/>
        </DataTemplate>

        <DataTemplate x:Key="DetailsSizeCenteredTemplate">
            <TextBlock Text="{Binding SizeText}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Foreground="#FFEFEFEF"/>
        </DataTemplate>

        <DataTemplate x:Key="OpenCharIniTemplate">
            <Button Content="Open"
                    Style="{StaticResource ModernButton}"
                    Padding="8,2"
                    Height="24"
                    Width="70"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="OpenCharIniButton_Click"/>
        </DataTemplate>

        <DataTemplate x:Key="OpenReadmeTemplate">
            <Button Content="Open"
                    Style="{StaticResource ModernButton}"
                    Padding="8,2"
                    Height="24"
                    Width="70"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsEnabled="{Binding HasReadme}"
                    Click="OpenReadmeButton_Click"/>
        </DataTemplate>

        <DataTemplate x:Key="IconTileTemplate">
            <Border x:Name="TileRootBorder"
                    Width="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=TileWidth}"
                    Height="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=TileHeight}"
                    Margin="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=TileMargin}"
                    Background="#1E262D38"
                    BorderBrush="#503B4659"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=TilePadding}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Viewbox Grid.Row="0"
                             Stretch="Uniform"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             Margin="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=InternalTileRowPadding}">
                        <Image Source="{Binding PreviewImage}" Stretch="Uniform"/>
                    </Viewbox>

                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Bottom"
                                Margin="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=InternalTileRowPadding}">
                        <Image Width="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=IconSize}"
                               Height="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=IconSize}"
                               Source="{Binding IconImage}"
                               Stretch="Uniform"
                               Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding Name}"
                                   Foreground="#FFF0F0F0"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"
                                   FontSize="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=TileNameFontSize}"/>
                    </StackPanel>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding IntegrityHasFailures}" Value="True"/>
                        <Condition Binding="{Binding RelativeSource={RelativeSource AncestorType=local:CharacterFolderVisualizerWindow}, Path=ShowIntegrityVerifierResults}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter TargetName="TileRootBorder" Property="Background" Value="#2CFF5B5B"/>
                    <Setter TargetName="TileRootBorder" Property="BorderBrush" Value="#50FF8E8E"/>
                </MultiDataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </local:OceanyaWindowContentControl.Resources>

    <local:OceanyaWindowContentControl.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </local:OceanyaWindowContentControl.Triggers>

    <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Search:" VerticalAlignment="Center" Foreground="#FFE2E2E2" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1"
                             x:Name="SearchTextBox"
                             Style="{StaticResource ModernTextBox}"
                             TextChanged="SearchTextBox_TextChanged"/>

                    <TextBlock Grid.Column="2" Text="View:" VerticalAlignment="Center" Foreground="#FFE2E2E2" Margin="14,0,8,0"/>
                    <ComboBox Grid.Column="3"
                              x:Name="ViewModeCombo"
                              Width="220"
                              SelectionChanged="ViewModeCombo_SelectionChanged"
                              Style="{StaticResource DarkComboBoxStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Grid.Column="4"
                            x:Name="RefreshAssetsButton"
                            Content="Refresh Assets"
                            Width="120"
                            HorizontalAlignment="Left"
                            Margin="10,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="RefreshAssetsButton_Click"/>

                    <Button Grid.Column="5"
                            x:Name="SelectTagsButton"
                            Content="Filters &amp; Sorting"
                            Width="140"
                            Margin="10,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="SelectTagsButton_Click"/>

                    <Button Grid.Column="6"
                            x:Name="ToggleTagPanelTopButton"
                            Content="Hide Tags"
                            Width="95"
                            Margin="10,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="ToggleTagPanelButton_Click"/>

                    <CheckBox Grid.Column="7"
                              x:Name="ViewIntegrityVerifierResultsCheckBox"
                              Content="View Integrity Verifier Results"
                              VerticalAlignment="Center"
                              Margin="12,0,0,0"
                              Foreground="#FFE2E2E2"
                              Checked="ViewIntegrityVerifierResultsCheckBox_Changed"
                              Unchecked="ViewIntegrityVerifierResultsCheckBox_Changed"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="TagPanelColumn" Width="260" MinWidth="0"/>
                        <ColumnDefinition x:Name="TagPanelSplitterColumn" Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#20000000" BorderBrush="#4AFFFFFF" BorderThickness="1" Padding="8,8,8,6">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="Tags"
                                           Foreground="#FFE8E8E8"
                                           FontWeight="Bold"
                                           VerticalAlignment="Center"/>
                                <ToggleButton Grid.Column="1"
                                              x:Name="ToggleTagPanelButton"
                                              Width="26"
                                              Height="24"
                                              Margin="8,0,0,0"
                                              Content="◀"
                                              ToolTip="Collapse tag panel"
                                              Background="#FF262626"
                                              Foreground="White"
                                              BorderBrush="#444444"
                                              BorderThickness="1"
                                              Click="ToggleTagPanelButton_Click"/>
                            </Grid>

                            <TextBlock Grid.Row="1"
                                       x:Name="SelectedFolderLabel"
                                       Margin="0,8,0,4"
                                       Foreground="#FFD8D8D8"
                                       Text="No folder selected"
                                       TextTrimming="CharacterEllipsis"/>

                            <Grid Grid.Row="2" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE8EC;"
                                           Margin="0,0,6,0"
                                           Foreground="#FF9FD0F5"
                                           VerticalAlignment="Center"/>
                                <ComboBox Grid.Column="1"
                                          x:Name="TagInputComboBox"
                                          Style="{StaticResource DarkComboBoxStyle}"
                                          IsEditable="True"
                                          IsTextSearchEnabled="False"
                                          StaysOpenOnEdit="True"
                                          Height="30"
                                          PreviewKeyDown="TagInputComboBox_PreviewKeyDown"
                                          TextBoxBase.TextChanged="TagInputComboBox_TextChanged"
                                          ToolTip="Type tag name and press Enter">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                                           Text="&#xE8EC;"
                                                           Margin="0,0,6,0"
                                                           Foreground="#FF9FD0F5"/>
                                                <TextBlock Text="{Binding}" Foreground="#FFF2F2F2"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>

                            <ListBox Grid.Row="3"
                                     x:Name="SelectedFolderTagsListBox"
                                     Background="#12000000"
                                     Foreground="#FFF0F0F0"
                                     BorderBrush="#3AFFFFFF"
                                     BorderThickness="1"
                                     SelectionMode="Single"
                                     MouseDoubleClick="SelectedFolderTagsListBox_MouseDoubleClick">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Padding" Value="2,1"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,1,0,1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                                       FontFamily="Segoe MDL2 Assets"
                                                       Text="&#xE8EC;"
                                                       Margin="2,0,6,0"
                                                       Foreground="#FF9FD0F5"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding}"
                                                       VerticalAlignment="Center"
                                                       Foreground="#FFF2F2F2"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <Button Content="✕"
                                                    Grid.Column="2"
                                                    Width="24"
                                                    Height="22"
                                                    Margin="6,0,0,0"
                                                    Style="{StaticResource TagChipButtonStyle}"
                                                    Click="RemoveTagButton_Click"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Grid Grid.Row="4" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="RenameTagButton"
                                        Grid.Column="0"
                                        Content="Rename"
                                        HorizontalAlignment="Stretch"
                                        Style="{StaticResource ModernButton}"
                                        Click="RenameTagButton_Click"/>
                                <Button x:Name="RemoveSelectedTagButton"
                                        Grid.Column="1"
                                        Content="Remove"
                                        HorizontalAlignment="Stretch"
                                        Margin="6,0,0,0"
                                        Style="{StaticResource ModernButton}"
                                        Click="RemoveSelectedTagButton_Click"/>
                                <Button x:Name="ClearFolderTagsButton"
                                        Grid.Column="2"
                                        Content="Clear"
                                        HorizontalAlignment="Stretch"
                                        Margin="6,0,0,0"
                                        Style="{StaticResource ModernButton}"
                                        Click="ClearFolderTagsButton_Click"/>
                            </Grid>
                        </Grid>
                    </Border>

                    <GridSplitter Grid.Column="1"
                                  x:Name="TagPanelSplitter"
                                  ResizeDirection="Columns"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Background="#4090A7BF"
                                  ShowsPreview="True"/>

                    <Border Grid.Column="2" Background="#14000000" BorderBrush="#4AFFFFFF" BorderThickness="1">
                        <ListView x:Name="FolderListView"
                                  Style="{StaticResource VisualizerListViewStyle}"
                                  BorderThickness="0"
                                  Background="#00000000"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  PreviewMouseWheel="FolderListView_PreviewMouseWheel"
                                  PreviewMouseLeftButtonDown="FolderListView_PreviewMouseLeftButtonDown"
                                  MouseDoubleClick="FolderListView_MouseDoubleClick"
                                  PreviewMouseRightButtonDown="FolderListView_PreviewMouseRightButtonDown"
                                  ContextMenuOpening="FolderListView_ContextMenuOpening"
                                  SelectionChanged="FolderListView_SelectionChanged"/>
                    </Border>
                </Grid>

                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#AA000000" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="8,6">
                        <StackPanel Orientation="Vertical">
                            <TextBlock x:Name="SummaryText" Foreground="#FFDADADA" FontSize="12"/>
                            <TextBlock x:Name="ActiveTagFiltersText"
                                       Foreground="#FFBBD5EA"
                                       FontSize="11"
                                       Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <Button Grid.Column="1"
                            x:Name="ConfigureViewsButton"
                            Content="Configure Views"
                            Width="130"
                            Margin="8,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="ConfigureViewsButton_Click"/>

                    <Button Grid.Column="2"
                            x:Name="CloseBottomButton"
                            Content="Close"
                            Width="90"
                            Margin="8,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="CloseButton_Click"/>
                </Grid>
    </Grid>
</local:OceanyaWindowContentControl>
