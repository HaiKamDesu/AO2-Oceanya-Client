<local:OceanyaWindowContentControl x:Class="OceanyaClient.CharacterIntegrityVerifierResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OceanyaClient"
        Title="Integrity Verifier Results"
        Height="620"
        Width="980"
        MinHeight="500"
        MinWidth="780"
        KeyDown="Window_KeyDown">

    <local:OceanyaWindowContentControl.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF171717" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FF1A1A1A" TargetName="ButtonBorder"/>
                                <Setter Property="BorderBrush" Value="#FF333333" TargetName="ButtonBorder"/>
                                <Setter Property="Foreground" Value="#FF7A7A7A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE81123" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFC41E3A" TargetName="ButtonBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VerifierDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#14000000"/>
            <Setter Property="Foreground" Value="#FFE8E8E8"/>
            <Setter Property="BorderBrush" Value="#4AFFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#22444444"/>
            <Setter Property="VerticalGridLinesBrush" Value="#00000000"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Foreground" Value="#FFD8D8D8"/>
                        <Setter Property="Background" Value="#FF2F2F2F"/>
                        <Setter Property="BorderBrush" Value="#444444"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        <Setter Property="Padding" Value="6,4"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="TextBlock.TextAlignment" Value="Left"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Background" Value="#00000000"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#24FFFFFF"/>
                                <Setter Property="Foreground" Value="#FFF2F2F2"/>
                                <Setter Property="BorderBrush" Value="#33FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VerifierRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1F5F5F5F"/>
                </Trigger>
                <DataTrigger Binding="{Binding Passed}" Value="True">
                    <Setter Property="Background" Value="#2432A852"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Passed}" Value="False">
                    <Setter Property="Background" Value="#1FFF5B5B"/>
                </DataTrigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#24FFFFFF"/>
                    <Setter Property="Foreground" Value="#FFF2F2F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <DataTemplate x:Key="TestNameTemplate">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock x:Name="ResultIcon"
                           Text="✓"
                           FontSize="14"
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"
                           Foreground="#FF7CE896"/>
                <TextBlock Text="{Binding TestName}"
                           ToolTip="{Binding Description}"
                           VerticalAlignment="Center"
                           TextWrapping="NoWrap"
                           TextTrimming="CharacterEllipsis"
                           TextAlignment="Left"/>
            </StackPanel>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Passed}" Value="False">
                    <Setter TargetName="ResultIcon" Property="Text" Value="✕"/>
                    <Setter TargetName="ResultIcon" Property="Foreground" Value="#FFFF8F8F"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <DataTemplate x:Key="DetailsTemplate">
            <TextBlock Text="{Binding Message}"
                       TextWrapping="Wrap"
                       TextAlignment="Left"
                       VerticalAlignment="Center"/>
        </DataTemplate>
    </local:OceanyaWindowContentControl.Resources>

    <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="#AA000000" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="8,6" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock x:Name="HeaderTextBlock" Foreground="#FFEDEDED" FontSize="13" FontWeight="Bold"/>
                        <TextBlock x:Name="MetaTextBlock" Foreground="#FFD0D0D0" FontSize="11" Margin="0,2,0,0"/>
                    </StackPanel>
                </Border>

                <DataGrid Grid.Row="1"
                          x:Name="ResultsDataGrid"
                          Style="{StaticResource VerifierDataGridStyle}"
                          RowStyle="{StaticResource VerifierRowStyle}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeRows="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeaderWidth="0"
                          LoadingRow="ResultsDataGrid_LoadingRow">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Test Name" Width="280" CellTemplate="{StaticResource TestNameTemplate}"/>
                        <DataGridTemplateColumn Header="Details" Width="*" CellTemplate="{StaticResource DetailsTemplate}"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Grid Grid.Row="2" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#AA000000" BorderBrush="#33FFFFFF" BorderThickness="1" Padding="8,6">
                        <TextBlock x:Name="SummaryTextBlock" Foreground="#FFDADADA" FontSize="12"/>
                    </Border>

                    <Button Grid.Column="1"
                            Content="Run Verifier"
                            Width="120"
                            Margin="8,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="RunVerifierButton_Click"/>

                    <Button Grid.Column="2"
                            Content="Close"
                            Width="90"
                            Margin="8,0,0,0"
                            Style="{StaticResource ModernButton}"
                            Click="CloseButton_Click"/>
                </Grid>
    </Grid>
</local:OceanyaWindowContentControl>
