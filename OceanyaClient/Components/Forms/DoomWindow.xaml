<local:OceanyaWindowContentControl x:Class="OceanyaClient.DoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OceanyaClient"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Height="360"
        Width="480"
        MinHeight="360"
        MinWidth="480"
        Loaded="Window_Loaded">

    <local:OceanyaWindowContentControl.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFE81123"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFC41E3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF171717" TargetName="ButtonBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </local:OceanyaWindowContentControl.Resources>

    <Grid Margin="12,10,12,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#FF4A4A4A" BorderThickness="1" Background="Black">
                    <Grid>
                        <wv2:WebView2 x:Name="DoomBrowser" />
                        <Border x:Name="FallbackOverlay"
                                Background="#CC000000"
                                Visibility="Collapsed">
                            <TextBlock Text="Embedded DOOM failed to load. Use 'Open in browser'."
                                       Foreground="White"
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Row="1"
                        Margin="0,10,0,0"
                        BorderBrush="#FF4A4A4A"
                        BorderThickness="1"
                        Background="#CC1F1F1F"
                        Padding="8,6">
                    <DockPanel LastChildFill="True">
                        <Button x:Name="ReloadButton"
                                Content="Reload"
                                Width="90"
                                Margin="8,0,0,0"
                                DockPanel.Dock="Right"
                                Style="{StaticResource ModernButton}"
                                Click="ReloadButton_Click" />
                        <TextBlock Foreground="White"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"
                                   FontSize="11"
                                   Text="Check the read this option in the DOOM menu to see controls." />
                    </DockPanel>
                </Border>
    </Grid>
</local:OceanyaWindowContentControl>
