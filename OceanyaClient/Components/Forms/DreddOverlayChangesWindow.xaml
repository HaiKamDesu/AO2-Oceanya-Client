<local:OceanyaWindowContentControl x:Class="OceanyaClient.DreddOverlayChangesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OceanyaClient"
        Height="520"
        Width="980"
        >
    <local:OceanyaWindowContentControl.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFE81123"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFC41E3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF171717" TargetName="ButtonBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </local:OceanyaWindowContentControl.Resources>

    <Grid Margin="12,10,12,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Pending design.ini changes"
                           FontSize="16"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <Border Grid.Row="1" BorderBrush="#FF4A4A4A" BorderThickness="1" Background="#CC1F1F1F" Padding="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="DiffItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FF252525" BorderBrush="#FF3A3A3A" BorderThickness="1" CornerRadius="4" Margin="0,0,0,10" Padding="8">
                                        <Border.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Discard this change" Click="DiscardSingleMenuItem_Click"/>
                                                <MenuItem Header="Keep as-is (remove pending)" Click="KeepSingleMenuItem_Click"/>
                                            </ContextMenu>
                                        </Border.ContextMenu>
                                        <StackPanel>
                                            <TextBlock Text="{Binding DesignIniPath}" Foreground="#FFD8D8D8" FontWeight="SemiBold" TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Status}" Foreground="#FFB2C7FF" FontSize="11" Margin="0,2,0,6"/>

                                            <Border Background="#FF3A1E1E" BorderBrush="#FF7C3E3E" BorderThickness="1" CornerRadius="2" Padding="6" Margin="0,0,0,4">
                                                <TextBlock Foreground="#FFFFB5B5" FontFamily="Consolas" Text="{Binding DiffBefore}" TextWrapping="Wrap"/>
                                            </Border>

                                            <Border Background="#FF1B3922" BorderBrush="#FF3F7F4F" BorderThickness="1" CornerRadius="2" Padding="6">
                                                <TextBlock Foreground="#FFB6F1C1" FontFamily="Consolas" Text="{Binding DiffAfter}" TextWrapping="Wrap"/>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Width="140" Height="30" Margin="0,0,8,0" Content="Discard All" Style="{StaticResource ModernButton}" Click="DiscardAllButton_Click"/>
                    <Button Width="120" Height="30" Margin="0,0,8,0" Content="Apply All" Style="{StaticResource ModernButton}" Click="ApplyAllButton_Click"/>
                    <Button Width="120" Height="30" Margin="0,0,8,0" Content="Refresh" Style="{StaticResource ModernButton}" Click="RefreshButton_Click"/>
                    <Button Width="120" Height="30" Content="Close" Style="{StaticResource ModernButton}" Click="CloseButton_Click"/>
                </StackPanel>
    </Grid>
</local:OceanyaWindowContentControl>
