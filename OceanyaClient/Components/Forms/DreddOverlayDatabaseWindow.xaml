<Window x:Class="OceanyaClient.DreddOverlayDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dredd's Background Overlay Override"
        Height="410"
        Width="760"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Resources/OceanyaO.ico"
        Background="#FF202020">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Overlay database"
                   FontSize="16"
                   Foreground="White"
                   FontWeight="SemiBold"
                   Margin="0,0,0,10"/>

        <DataGrid Grid.Row="1"
                  x:Name="OverlayGrid"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  Background="#FF2A2A2A"
                  Foreground="White"
                  BorderBrush="#FF4A4A4A"
                  BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Overlay Path" Binding="{Binding FilePath}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="90" Height="30" Margin="0,0,8,0" Content="Add" Click="AddButton_Click"/>
            <Button Width="90" Height="30" Margin="0,0,8,0" Content="Edit" Click="EditButton_Click"/>
            <Button Width="90" Height="30" Margin="0,0,8,0" Content="Remove" Click="RemoveButton_Click"/>
            <Button Width="90" Height="30" Margin="0,0,8,0" Content="Save" Click="SaveButton_Click"/>
            <Button Width="90" Height="30" Content="Close" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
