<Window x:Class="OceanyaClient.DreddOverlayEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay Entry"
        Height="190"
        Width="560"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="/Resources/OceanyaO.ico"
        Background="#FF202020">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Name" Foreground="White" Margin="0,0,0,4"/>
        <TextBox Grid.Row="1" x:Name="NameTextBox" Margin="0,0,0,8"/>

        <TextBlock Grid.Row="2" Text="Overlay path" Foreground="White" Margin="0,0,0,4"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="PathTextBox" Grid.Column="0" VerticalAlignment="Center"/>
            <Button Grid.Column="1" Width="80" Height="28" Margin="8,0,8,0" Content="Browse" Click="BrowseButton_Click"/>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Width="80" Height="28" Margin="0,0,8,0" Content="OK" Click="OkButton_Click"/>
                <Button Width="80" Height="28" Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
