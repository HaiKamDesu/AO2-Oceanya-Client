<Window x:Class="OceanyaClient.DreddOverlayEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay Entry"
        Height="240"
        Width="620"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/OceanyaO.ico"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFE81123"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#FFC41E3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF171717" TargetName="ButtonBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF4A4A4A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#222222" BorderThickness="1" CornerRadius="5">
        <Grid Margin="0,0,-1,-1">
            <Rectangle HorizontalAlignment="Center" Width="620" Height="240" VerticalAlignment="Top" Margin="0,30,0,0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/Resources/scoienceblur.jpg" Opacity="0.5"/>
                </Rectangle.Fill>
            </Rectangle>

            <Rectangle HorizontalAlignment="Center" Width="620" Height="240" VerticalAlignment="Top" Margin="0,30,0,0" Fill="#7F000000"/>

            <Border Height="30" VerticalAlignment="Top" Background="#CC000000" MouseLeftButtonDown="DragWindow">
                <Grid>
                    <Rectangle HorizontalAlignment="Left" Width="129" Height="30" VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/Resources/Logo_Oceanya.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Width="30"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="TitleCloseButton_Click"/>
                </Grid>
            </Border>

            <Grid Margin="12,42,12,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Overlay name" Foreground="White" Margin="0,0,0,4"/>
                <TextBox Grid.Row="1" x:Name="NameTextBox" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Text="Overlay path (supports AO-style relative paths)" Foreground="White" Margin="0,0,0,4"/>
                <Grid Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="PathTextBox" Grid.Column="0" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Width="86" Height="30" Margin="8,0,0,0" Content="Browse" Style="{StaticResource ModernButton}" Click="BrowseButton_Click"/>
                </Grid>

                <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Width="86" Height="30" Margin="0,0,8,0" Content="Save" Style="{StaticResource ModernButton}" Click="OkButton_Click"/>
                    <Button Width="86" Height="30" Content="Cancel" Style="{StaticResource ModernButton}" Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
