<Window x:Class="OceanyaClient.TagFilterSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Select Tags"
        Height="560"
        Width="500"
        MinHeight="420"
        MinWidth="380"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="30"
                            ResizeBorderThickness="6"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>
    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF171717" TargetName="ButtonBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFE81123" TargetName="ButtonBorder"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFC41E3A" TargetName="ButtonBorder"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="#FFF2F2F2"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="VisualizerListViewStyle" TargetType="ListView">
            <Setter Property="Background" Value="#FF262626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="VisualizerDetailsItemStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#00000000"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="ItemBorder"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <GridViewRowPresenter Margin="2,0,2,0"
                                                  VerticalAlignment="Center"
                                                  Content="{TemplateBinding Content}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#355F5F5F"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#4B6D6D6D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VisualizerGridHeaderStyle" TargetType="GridViewColumnHeader">
            <Setter Property="Foreground" Value="#D8D8D8"/>
            <Setter Property="Background" Value="#FF2F2F2F"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GridViewColumnHeader">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                            </Border>
                            <Thumb x:Name="PART_HeaderGripper"
                                   HorizontalAlignment="Right"
                                   Width="7"
                                   Background="Transparent"
                                   Cursor="SizeWE">
                                <Thumb.Template>
                                    <ControlTemplate TargetType="Thumb">
                                        <Grid Background="Transparent">
                                            <Border HorizontalAlignment="Center"
                                                    Width="1"
                                                    Background="#66444444"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                            <Trigger Property="IsDragging" Value="True">
                                                <Setter Property="Opacity" Value="1"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Thumb.Template>
                            </Thumb>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="TagNameCellTemplate">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets"
                               Text="&#xE8EC;"
                               Margin="0,0,6,0"
                               Foreground="#FF9FD0F5"
                               VerticalAlignment="Center"
                               TextAlignment="Left"/>
                    <TextBlock Text="{Binding Name}"
                               VerticalAlignment="Center"
                               Foreground="#FFF0F0F0"
                               TextAlignment="Left"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="TagIncludeCellTemplate">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <CheckBox Width="28"
                          Height="22"
                          Margin="0"
                          Padding="0"
                          HorizontalAlignment="Center"
                          HorizontalContentAlignment="Center"
                          VerticalAlignment="Center"
                          VerticalContentAlignment="Center"
                          IsChecked="{Binding IncludeSelected, Mode=TwoWay}"
                          ToolTip="Include this tag"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="TagExcludeCellTemplate">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <CheckBox Width="28"
                          Height="22"
                          Margin="0"
                          Padding="0"
                          HorizontalAlignment="Center"
                          HorizontalContentAlignment="Center"
                          VerticalAlignment="Center"
                          VerticalContentAlignment="Center"
                          IsChecked="{Binding ExcludeSelected, Mode=TwoWay}"
                          IsEnabled="{Binding CanExclude}"
                          ToolTip="Exclude this tag"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Border BorderBrush="#222222" BorderThickness="1" CornerRadius="5">
        <Grid>
            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,30,0,0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="pack://application:,,,/OceanyaClient;component/Resources/scoienceblur.jpg"
                                Stretch="UniformToFill"
                                Opacity="0.5"/>
                </Rectangle.Fill>
            </Rectangle>
            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,30,0,0" Fill="#7F000000"/>

            <Border Height="30" VerticalAlignment="Top" Background="#CC000000" MouseLeftButtonDown="DragWindow">
                <Grid>
                    <Rectangle HorizontalAlignment="Left" Width="129" Height="30" VerticalAlignment="Center">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="pack://application:,,,/OceanyaClient;component/Resources/Logo_Oceanya.png"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Width="30"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True"
                            Style="{StaticResource CloseButtonStyle}"
                            Click="CloseButton_Click"/>
                    <Rectangle HorizontalAlignment="Left" Width="157" Height="23" VerticalAlignment="Top" Margin="129,6,0,0">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="pack://application:,,,/OceanyaClient;component/Resources/Logo_Laboratories.png" Stretch="Uniform"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock Text="SELECT TAG FILTERS"
                               Foreground="#FFEAEAEA"
                               FontSize="12"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <Grid Margin="12,42,12,12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Set include/exclude tags for filtering"
                           Margin="0,0,0,8"
                           Foreground="#FFD8D8D8"/>

                <TextBox Grid.Row="1"
                         x:Name="SearchTextBox"
                         Style="{StaticResource ModernTextBox}"
                         Margin="0,0,0,8"
                         TextChanged="SearchTextBox_TextChanged"/>

                <Border Grid.Row="2" BorderBrush="#4AFFFFFF" BorderThickness="1" Background="#18000000">
                    <ListView x:Name="TagListBox"
                              Style="{StaticResource VisualizerListViewStyle}"
                              BorderThickness="0"
                              Background="#00000000"
                              ItemContainerStyle="{StaticResource VisualizerDetailsItemStyle}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              SizeChanged="TagListBox_SizeChanged"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <ListView.View>
                            <GridView x:Name="TagGridView"
                                      ColumnHeaderContainerStyle="{StaticResource VisualizerGridHeaderStyle}"
                                      AllowsColumnReorder="False">
                                <GridViewColumn x:Name="TagNameColumn"
                                                Header="Tag Name"
                                                Width="290"
                                                CellTemplate="{StaticResource TagNameCellTemplate}"/>
                                <GridViewColumn x:Name="IncludeColumn"
                                                Header="Include"
                                                Width="80"
                                                CellTemplate="{StaticResource TagIncludeCellTemplate}"/>
                                <GridViewColumn x:Name="ExcludeColumn"
                                                Header="Exclude"
                                                Width="80"
                                                CellTemplate="{StaticResource TagExcludeCellTemplate}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <Grid Grid.Row="3" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               x:Name="SelectionSummaryText"
                               VerticalAlignment="Center"
                               Foreground="#FFBFD7EB"
                               TextTrimming="CharacterEllipsis"/>

                    <Grid Grid.Row="1" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Select All"
                                HorizontalAlignment="Stretch"
                                Style="{StaticResource ModernButton}"
                                Click="SelectAllVisibleButton_Click"/>
                        <Button Grid.Column="1"
                                Content="Clear All"
                                HorizontalAlignment="Stretch"
                                Margin="6,0,0,0"
                                Style="{StaticResource ModernButton}"
                                Click="ClearAllButton_Click"/>
                        <Button Grid.Column="2"
                                Content="Cancel"
                                HorizontalAlignment="Stretch"
                                Margin="6,0,0,0"
                                Style="{StaticResource ModernButton}"
                                IsCancel="True"/>
                        <Button Grid.Column="3"
                                Content="Apply"
                                HorizontalAlignment="Stretch"
                                Margin="6,0,0,0"
                                Style="{StaticResource ModernButton}"
                                IsDefault="True"
                                Click="ApplyButton_Click"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
