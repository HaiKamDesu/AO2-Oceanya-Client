<UserControl x:Class="OceanyaClient.PlayStopProgressButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="36"
             Height="36">
    <Grid>
        <Ellipse x:Name="BaseRing"
                 Stroke="{Binding BaseRingBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                 StrokeThickness="{Binding RingThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <Path x:Name="ProgressPath"
              Stroke="{Binding ProgressRingBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeThickness="{Binding RingThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
              StrokeStartLineCap="Round"
              StrokeEndLineCap="Round"/>
        <Button x:Name="MainButton"
                Width="24"
                Height="24"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="MainButton_Click"
                ToolTip="{Binding ToolTipText, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </ControlTemplate>
            </Button.Template>
            <TextBlock x:Name="GlyphText"
                       Text="â–¶"
                       FontSize="12"
                       Foreground="{Binding GlyphBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Button>
    </Grid>
</UserControl>
