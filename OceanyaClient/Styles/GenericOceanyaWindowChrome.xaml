<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:OceanyaClient"
                    xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework">
    <Style x:Key="GenericOceanyaCloseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="ButtonBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFE81123" TargetName="ButtonBorder"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FFC41E3A" TargetName="ButtonBorder"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GenericOceanyaWindowStyle" TargetType="Window">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="#222222"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="local:GenericOceanyaWindow.EnableSharedChromeBehavior" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border x:Name="WindowFrameBorder"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                        <Grid Margin="0,0,-1,-1">
                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/OceanyaClient;component/Resources/scoienceblur.jpg"
                                                Opacity="0.5"
                                                Stretch="UniformToFill"/>
                                </Rectangle.Fill>
                            </Rectangle>

                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="#7F000000"/>

                            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,30,0,0">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="pack://application:,,,/OceanyaClient;component/Resources/Logo_O_centered.png"
                                                AlignmentX="Center"
                                                AlignmentY="Center"
                                                Stretch="Uniform"
                                                Opacity="0.08"/>
                                </Rectangle.Fill>
                            </Rectangle>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border x:Name="HeaderDragSurface" Grid.Row="0" Background="#CC000000">
                                    <Grid x:Name="HeaderGrid">
                                        <Rectangle x:Name="OceanyaLogoRectangle"
                                                   HorizontalAlignment="Left"
                                                   Width="129"
                                                   Height="30"
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="pack://application:,,,/OceanyaClient;component/Resources/Logo_Oceanya.png"/>
                                            </Rectangle.Fill>
                                        </Rectangle>

                                        <Rectangle x:Name="LaboratoriesLogoRectangle"
                                                   HorizontalAlignment="Left"
                                                   Width="157"
                                                   Height="23"
                                                   VerticalAlignment="Top"
                                                   Margin="129,6,0,0"
                                                   IsHitTestVisible="False">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="pack://application:,,,/OceanyaClient;component/Resources/Logo_Laboratories.png"
                                                            Stretch="Uniform"/>
                                            </Rectangle.Fill>
                                        </Rectangle>

                                        <TextBlock x:Name="HeaderVersionTextBlock"
                                                   Text="{x:Static local:GenericOceanyaWindow.ClientVersionDisplayText}"
                                                   Foreground="#FFE9EEF5"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Margin="286,0,0,0"
                                                   IsHitTestVisible="False">
                                            <TextBlock.Effect>
                                                <DropShadowEffect BlurRadius="6"
                                                                  Direction="270"
                                                                  Opacity="0.8"
                                                                  ShadowDepth="1"
                                                                  Color="#FF0A0A0A"/>
                                            </TextBlock.Effect>
                                        </TextBlock>

                                        <TextBlock x:Name="HeaderTitleTextBlock"
                                                   Text="{TemplateBinding Title}"
                                                   Foreground="#FFDADADA"
                                                   FontSize="12"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   IsHitTestVisible="False"/>

                                        <Button x:Name="CloseButton"
                                                Width="30"
                                                HorizontalAlignment="Right"
                                                Content="âœ•"
                                                Style="{StaticResource GenericOceanyaCloseButtonStyle}"
                                                shell:WindowChrome.IsHitTestVisibleInChrome="True"
                                                Command="{x:Static SystemCommands.CloseWindowCommand}"
                                                CommandParameter="{Binding RelativeSource={RelativeSource TemplatedParent}}"/>
                                    </Grid>
                                </Border>

                                <AdornerDecorator Grid.Row="1">
                                    <ContentPresenter Margin="{TemplateBinding Padding}"/>
                                </AdornerDecorator>
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="WindowFrameBorder" Property="BorderThickness" Value="0"/>
                            <Setter TargetName="WindowFrameBorder" Property="CornerRadius" Value="0"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="shell:WindowChrome.WindowChrome">
            <Setter.Value>
                <shell:WindowChrome CaptionHeight="30"
                                    ResizeBorderThickness="6"
                                    CornerRadius="0"
                                    GlassFrameThickness="0"
                                    UseAeroCaptionButtons="False"/>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="ResizeMode" Value="NoResize">
                <Setter Property="shell:WindowChrome.WindowChrome">
                    <Setter.Value>
                        <shell:WindowChrome CaptionHeight="30"
                                            ResizeBorderThickness="0"
                                            CornerRadius="0"
                                            GlassFrameThickness="0"
                                            UseAeroCaptionButtons="False"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="ResizeMode" Value="CanMinimize">
                <Setter Property="shell:WindowChrome.WindowChrome">
                    <Setter.Value>
                        <shell:WindowChrome CaptionHeight="30"
                                            ResizeBorderThickness="0"
                                            CornerRadius="0"
                                            GlassFrameThickness="0"
                                            UseAeroCaptionButtons="False"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
